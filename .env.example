# =============================================================================
# Document Layout Analysis API - Environment Configuration
# =============================================================================
# Copy this file to .env and modify values as needed

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
APP_NAME=Document Layout Analysis API
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_PATH=models/yolov10m_doclaynet.onnx
USE_TABLE_TRANSFORMER=true
MODEL_CONFIDENCE=0.5

# -----------------------------------------------------------------------------
# Processing
# -----------------------------------------------------------------------------
MAX_WORKERS=4
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# -----------------------------------------------------------------------------
# OCR (Tesseract)
# -----------------------------------------------------------------------------
# Windows:
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux:
# TESSERACT_CMD=/usr/bin/tesseract

TESSDATA_PREFIX=tessdata
OCR_LANGUAGES=eng+fra+ara
OCR_DPI=300

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Build/Deploy (set by CI/CD)
# -----------------------------------------------------------------------------
GIT_COMMIT=development
BUILD_DATE=unknown
